<!-- Start of Password Toggle script -->
<script>
    /**
     * Require jQuery and PasswordToggle module, then initialize password toggle functionality.
     * @param {jQuery} $ - The jQuery object.
     * @param {PasswordToggle} PasswordToggle - The PasswordToggle class.
     */
    require(["jquery", "passwordToggle"], function($, PasswordToggle) {
        /**
         * Initialize password toggle functionality when the document is ready.
         */
        $(document).ready(function() {
            // Create an instance of PasswordToggle
            new PasswordToggle("input[type='password']", ".password-toggle", "login");
        });
    });
</script>
<!-- End of Password Toggle script -->
